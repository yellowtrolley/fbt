<h1>Users and roles</h1>

<div class="row">
  <div class="col-md-4">{{number-box title="Roles" number=roles.length}}</div>
  <div class="col-md-4">{{number-box title="Users" number=users.length}}</div>
</div>

<div class="row">
	<div class="form-horizontal">
	  <div class="form-group has-feedback {{if newuser.isValid 'has-success'}}">
	    <label class="col-sm-2 control-label">Name*</label>
	    <div class="col-sm-10">
	      {{input type="text" value=newuser.name class="form-control" placeholder="The name of the product"}}
	      {{#if newuser.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
	    </div>
	  </div>
	  <div class="form-group">
	    <label class="col-sm-2 control-label">Description</label>
	    <div class="col-sm-10">
	      {{input type="text" value=newuser.description class="form-control" placeholder="The description of the product"}}
	    </div>
	  </div>
	  <div class="form-group">
	    <label class="col-sm-2 control-label">Price</label>
	    <div class="col-sm-10">
	      {{input type="text" value=newuser.price class="form-control" placeholder="The price of the product"}}
	    </div>
	  </div>
	  <div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
	      <button type="submit" class="btn btn-default" {{action 'buttonClicked' newuser}} disabled={{unless newuser.isValid true}}>{{buttonLabel}}</button>
	    </div>
	  </div>
	</div>
</div>